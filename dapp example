  </head>
  <body>
<p>Creating account</p>
<input id="index1" name="index value" type="text" />
<input id="cacno" name="accountno" type="text" />
<input id="cacname" name=accountname type="text" />
<input id="cacbal"name="accountbalance" type="text" />
<input type="Button" value="create" id="cre-click"/>
<pre id="hashresult1"></pre>
